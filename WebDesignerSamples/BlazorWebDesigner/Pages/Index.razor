@page "/"

@inject IJSRuntime JSRuntime;


<div id="designerHost" style="width: 100%; height: 100%;"></div>
<div id="fileViewHost" style="width: 100%; height: 100%; display: none;"></div>

@code {

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initDesigner", "designerHost");
        }
    }

}